{
  "manifest_version": 3,
  "name": "Ltly URL Shortener",
  "description": "Shorten URLs using dbrdak.com Ltly URL Shortener API",
  "version": "1.1",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/logo16.png",
      "32": "icons/logo32.png",
      "48": "icons/logo48.png",
      "96": "icons/logo96.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://dbrdak.com/*"
  ]
}
